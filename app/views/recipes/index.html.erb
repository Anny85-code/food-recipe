<% content_for :page_title do %>
  Recipes
<% end %>
<% content_for :header do %>
  <%= render partial: "/layouts/header" %>
<% end%>
<% content_for :content do %>
  <p style="color: green"><%= notice %></p>
  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <%= render recipe %>
    <% end %>
  </div>
<% end %>
